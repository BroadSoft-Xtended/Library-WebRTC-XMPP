.bdsft-webrtc
	.contact
		height 42px
		background-color #EEE
		border-top 1px solid #DDD
		position relative
		&:last-child
			border-bottom 1px solid #DDD
		.name
			position absolute
			font-weight bold
			left 14px
			top 11px
			color #606060
		.presence
			display none
		.close
			display none
		.remove
			position absolute
			right 14px
			top 14px
			background-color #D4D4D4
			text-decoration none
			display inline-block
			width 14px
			text-align center
			line-height 13px
			border-radius 10px
			padding-bottom 2px
			font-size 12px
			color #333
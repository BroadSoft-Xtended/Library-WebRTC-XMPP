.bdsft-webrtc
	.contact
		height 42px
		background-color #EEE
		border-top 1px solid #DDD
		position relative
		&:last-child
			border-bottom 1px solid #DDD
		.name
			position absolute
			font-weight bold
			left 30px
			top 11px
			color #606060
		.presence
			background #868686
			width 12px
			height 12px
			border-radius 12px
			display block
			position absolute
			top 15px
			left 8px
		&.available .presence
			background #54C523
		.close
			display none
		.remove
			position absolute
			right 14px
			top 14px
			background-color #D4D4D4
			text-decoration none
			display inline-block
			width 14px
			text-align center
			line-height 13px
			border-radius 10px
			padding-bottom 2px
			font-size 12px
			color #333
.bdsft-webrtc
	.xmpp
		color #999
		border-spacing 5px

		.chat 
			display none
			textarea
				height 20px
				font-size 12px
		&.contactSelected .chat
			display block

		&.connected .contentView,
		&:not(.connected) .loginView
			display block
			
		&.connected .loginView,
		&:not(.connected) .contentView
			display none


	.enableXMPP.xmpp-shown.xmpp
		{fadeInPopup}

	.enableXMPP.xmpp-hidden.xmpp
		{fadeOut}
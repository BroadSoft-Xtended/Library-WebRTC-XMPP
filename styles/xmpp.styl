@import '../styles/xmpp-icons.styl'
.bdsft-webrtc
	.xmpp
		@require './jquery.ui.resizable.styl'
		border-spacing 5px
		padding 0
		position absolute

		.loginView
			padding 14px
			background-color #F3F3F3
			border 1px solid #D6D6D6
			label
				display block
				font-weight bolder
				color #606060
				margin-bottom 2px
				font-size 13px
			input
				display block
				background #FFFFFF
				border 1px solid #D6D6D6
				color #606060
				font-size 14px
				padding 8px
				border-radius 0
				&::-webkit-input-placeholder
					font-style italic
					color #D3D3D3
				&:-moz-placeholder
					font-style italic
					color #D3D3D3
				&::-moz-placeholder
					font-style italic
					color #D3D3D3
				&:-ms-input-placeholder
					font-style italic
					color #D3D3D3
			button
				border none
				border-radius 0
				padding 5px 10px
				font-size 14px
				color #FFF
				background-color #737373
				text-align center
				display inline-block
				width 168px
				height 25px
			.form-row
				margin-bottom 6px
				&:last-child
					margin-top 12px
					margin-bottom 0
					text-align center
		.contentView
			position relative
			.contactsView
				border 1px solid black
				position absolute
				top 0
				left 2px
				min-width 280px
				min-height 519px
				background-color #F3F3F3
				border 1px solid #D6D6D6
				.contact:not(.none).available
					{fadeInAnimated}
				.contact.unavailable
				.contact.unsubscribed
				.contact.none
					{flicker}
				.removeContactFailed
					display none
				.error
					color red
			.chatsView
				border 1px solid black
				display none
				position absolute
				top 0px
				left 220px
				height 100%
				min-width 150px
				min-height 150px
				width 150px
				height 150px
				overflow auto
				.chatsContent
					height 100%
					margin-bottom -20px
		a
			text-decoration underline
			
		&.contactSelected .chatsView
			display block

		&.connected .contentView,
		&:not(.connected) .loginView
			display block
			
		&.connected .loginView,
		&:not(.connected) .contentView
			display none


	.enableXMPP.xmpp-shown.xmpp
		{fadeInPopup}

	.enableXMPP.xmpp-hidden.xmpp
		{fadeOut}
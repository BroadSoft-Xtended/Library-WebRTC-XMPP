.bdsft-webrtc
	.mycontact
		margin 10px
		padding-top 6px
		padding-bottom 6px
		.presence
			background #607D8B
			box-shadow rgba(96, 125, 139, 0.5) 0 0 0 3px
			width 42px
			height 42px
			border-radius 42px
			display inline-block
			margin-right 10px
			vertical-align top
			margin-left 4px
			i
				display inline-block
				width 100%
				text-align center
				margin-top 8px
				font-size 22px
				color #FFF
		&.available .presence 
			background #8BC34A
			box-shadow rgba(139, 195, 74, 0.5) 0 0 0 3px
		&.dnd .presence 
			background #B71C1C
			box-shadow rgba(183, 28, 28, 0.5) 0 0 0 3px
		&.away .presence 
			background #E65100
			box-shadow rgba(230, 81, 0, 0.5) 0 0 0 3px
		&.unavailable .presence 
			background #212121
			box-shadow rgba(33, 33, 33, 0.5) 0 0 0 3px
		.name-container
			display inline-block
			margin-top -2px
			.name
				font-weight bold
				margin 0 5px
				font-size 16px
				color #616161
				display block
				width 192px
				text-overflow ellipsis
				white-space nowrap
				overflow hidden
				margin-bottom 3px
			.presenceSelect
				display block
				width 85px
				background-color rgba(0, 0, 0, 0)
				border none
				font-size 12px
				&:focus
					outline none